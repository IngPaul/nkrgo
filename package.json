{
  "name": "nkrgo-db",
  "version": "1.0.0",
  "description": "Nkego Database Client",
  "main": "server/index.js",
  "scripts": {
    "dev": "babel-node server/index.js",
    "start": "nodemon server/index.js --exec babel-node",
    "build": "babel server -d dist",
    "serve": "node dist/index.js",
    "production": "npm run build && npm run serve",
    "lint": "standard --env mocha",
    "test-mocha": "mocha --require babel-register --watch",
    "test": "nodemon server/index.js --exec 'standard --env mocha && mocha --require babel-register && npm start' "
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "parser": "babel-eslint",
    "ignore": [
      "/src/model/util_model/conect.js",
      "/dist"
    ],
    "plugins": [
      "graphql"
    ]
  },
  "author": "Paul Cuichan",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.1",
    "eslint-plugin-graphql": "^1.3.0",
    "mocha": "^3.5.0",
    "nodemon": "^1.11.0",
    "onchange": "^3.2.1",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "connect-multiparty": "^2.0.0",
    "express": "^4.15.4",
    "graphql": "^0.10.5",
    "graphql-server-express": "^1.1.0",
    "graphql-tools": "^1.2.1",
    "jwt-simple": "^0.5.1",
    "moment": "^2.18.1",
    "mongoose": "^4.11.6",
    "mongoose-pagination": "^1.0.0"
  }
}
